# DVD-to-Plex Configuration
# Copy this file to .env and fill in your values

# Pushover notifications
PUSHOVER_USER_KEY=your_pushover_user_key
PUSHOVER_API_TOKEN=your_pushover_api_token

# TMDb API for content identification
TMDB_API_TOKEN=your_tmdb_api_token

# Paths
WORKSPACE_DIR=~/DVDWorkspace
PLEX_MOVIES_DIR=/path/to/plex/movies
PLEX_TV_DIR=/path/to/plex/tv

# Web UI
WEB_HOST=127.0.0.1
WEB_PORT=8080

# DVD Drives (drutil indices, not device names)
DRIVE_IDS=1,2

# Timeouts and intervals
DRIVE_POLL_INTERVAL=5.0

# Google Sheets Sync (optional)
# GOOGLE_SHEETS_CREDENTIALS_FILE=/path/to/service-account.json
# GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id_here
# SHEETS_SYNC_INTERVAL=24
